header 
    padding: calc(0.5rem + 1vh) calc(0.25em + 5vw)
.head 
    &__wrap 
         display: flex
         flex-direction: row
         text-decoration: none
        &__title 
            font-family: $font-bold
            text-transform: uppercase
            font-size: 1.2rem
            line-height: 1em
            padding-top: calc(0.1rem + 1vh)
        &__img 
            width: 1.5em
            margin-right: 0.5em
            transition: 0.5s
            &:hover {
                fill: $rgba-primary-1
            }

.nav 
    display: flex
    flex-direction: row
    margin: 0
    padding: 0.5em 0 0
    &__item 
        list-style-type: none
        margin: 0 0.7em
        &:first-child 
            margin-left: 0
    &__link 
        color: #000000
        text-decoration: none        
        padding-bottom: 0.2em
        position: relative
        &:hover {
            color: #000000
        }
        &:before {
            content: ""
            position: absolute
            width: 100%
            height: 2px
            bottom: 0
            left: 0
            background-color: #000
            visibility: hidden
            -webkit-transform: scaleX(0)
            transform: scaleX(0)
            -webkit-transition: all 0.3s ease-in-out 0s
            transition: all 0.3s ease-in-out 0s
        }
        &:hover:before {
            visibility: visible
            -webkit-transform: scaleX(1)
            transform: scaleX(1)
        }
