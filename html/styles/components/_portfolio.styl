.portfolio {    
    border-bottom: 1px solid #EAEAEA;
    padding: calc(1em + 2vh) calc(0.5rem + 2vw);
    text-align: center;
    &__container {
        display: -ms-grid;
        display: grid;
        grid-gap: 10px 15px;

         // display: flex;
        // flex-direction: column;
        
    }
    &__item {
        background: #eee;
        border: 1px solid rgba(0, 0, 0, 0.8);
        border-radius: 3px; 
        text-decoration: none;
        padding: calc(1em + 2vh) calc(0.5rem + 2vw);
        transition: background 0.4s ease-in;
        // margin: 10px 0 40px;
        // height: 160px;                
        // display: flex;
        // justify-content: center;
        // align-items: center;    
        // justify-self: center;  
        &:hover {
            background: #c0c0c0;
        }  
    }
    &__title {
        margin: 0;
    }
    &__role {
        display: none;
    }
}

@media (min-width: 768px) {
    .portfolio {
        &__container {
            -ms-grid-columns: 1fr 1fr;
            grid-template-columns: 1fr 1fr;


            // flex-direction: row;
            // justify-content: space-between;
            // flex-flow: row wrap;
        }
        &__item {
            // width: 40%;
            // margin: 1em;
            // flex-direction: column;
        }
        &__role {
            display: block;
        }
    }
}