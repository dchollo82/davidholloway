.portfolio {
    padding: calc(1em + 2vh) calc(0.5rem + 2vw)
    border-bottom: 1px solid #EAEAEA;
    &__container {
        display: flex;
        flex-direction: column;
    }
    &__item {
        border: 1px solid rgba(0, 0, 0, 0.8);
        text-align: center;    
        background: #eee;
        text-decoration: none;
    }
    &__role {
        display: none;
    }
}