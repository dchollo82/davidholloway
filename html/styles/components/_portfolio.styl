.portfolio {    
    border-bottom: 1px solid #EAEAEA;
    padding: calc(1em + 2vh) calc(0.5rem + 2vw);
    text-align: center;
    &__container {
        display: flex;
        flex-direction: column;
    }
    &__item {
        background: #eee;
        border: 1px solid rgba(0, 0, 0, 0.8);
        border-radius: 3px; 
        text-decoration: none;
        margin: 10px 0 40px;
        height: 160px;
        display: flex;
        justify-content: center;
        align-items: center;        
    }
    &__role {
        display: none;
    }
}